    <remap from="pub/recognitions3d"  to="/butia_vision/br/object_recognition3d"/>
    <remap from="pub/markers" to="/butia_vision/br/markers"/>
    <rosparam param="color">[255,0,0]</rosparam>
  </node> -->

</launch>
